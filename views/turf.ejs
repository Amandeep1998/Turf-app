<% include _layouts/header %>
<div class="contianer">
  <div class="row">
    <div class="col-md-8">
        <!-- <div class="jumbotron" style="padding: 0; margin-top: 10px;">
          <% galleryImages.forEach(function(image) { %>
            <% if(image !== "thumbs") { %>
          <img class="mySlides" src="/turf_images/<%=turf._id%>/gallery/<%=image%>" style="width: 100%">
